<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_nag_graph"
    app:startDestination="@id/splashFragment2">

    <fragment
        android:id="@+id/inShortNewsFragment"
        android:name="com.example.amnnews.ui.inshort.InShortNewsFragment"
        android:label="In Short"
        tools:layout="@layout/inshort_news_design" />

    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.amnnews.ui.favorite.FavoriteFragment"
        android:label="Favorite"
        tools:layout="@layout/fragment_favorite">
        <action
            android:id="@+id/action_favoriteFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />


    </fragment>
    <fragment
        android:id="@+id/moreFragment"
        android:name="com.example.amnnews.ui.more.MoreFragment"
        android:label="More"
        tools:layout="@layout/fragment_more" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.amnnews.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_articleFragment"
            app:destination="@id/articleFragment"
            app:enterAnim="@animator/slide_in_right"
            app:exitAnim="@animator/slide_out_left"
            app:popEnterAnim="@animator/slide_in_left"
            app:popExitAnim="@animator/slide_out_right" />


    </fragment>
    <fragment
        android:id="@+id/exploreFragment"
        android:name="com.example.amnnews.ui.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore">
        <action
            android:id="@+id/action_exploreFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_exploreFragment"
        app:destination="@id/exploreFragment" />
    <action
        android:id="@+id/action_global_moreFragment"
        app:destination="@id/moreFragment" />
    <action
        android:id="@+id/action_global_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_addPostFragment"
        app:destination="@id/inShortNewsFragment" />
    <action
        android:id="@+id/action_global_favoriteFragment"
        app:destination="@id/favoriteFragment" />


    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.amnnews.ui.common.ArticleFragment"
        android:label="Article">
        <action
            android:id="@+id/action_articleFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />
    </fragment>


    <fragment
        android:id="@+id/splashFragment2"
        android:name="com.example.amnnews.ui.common.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment2_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment2"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_splashFragment2_to_loginAndSignupPageFragment"
            app:destination="@id/loginAndSignupPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginAndSignupPageFragment"
        android:name="com.example.amnnews.ui.common.LoginAndSignupPageFragment"
        android:label="fragment_login_and_signup_page"
        tools:layout="@layout/fragment_login_and_signup_page" >
        <action
            android:id="@+id/action_loginAndSignupPageFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_loginAndSignupPageFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.amnnews.ui.common.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_signUpFragment_to_loginAndSignupPageFragment"
            app:destination="@id/loginAndSignupPageFragment" />
    </fragment>
    <dialog
        android:id="@+id/myBottomSheetDialogFragment"
        android:name="MyBottomSheetDialogFragment"
        android:label="MyBottomSheetDialogFragment" >
        <action
            android:id="@+id/action_myBottomSheetDialogFragment_to_loginAndSignupPageFragment"
            app:destination="@id/loginAndSignupPageFragment" />
    </dialog>


</navigation>